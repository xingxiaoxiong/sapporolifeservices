<div class="center">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-md-3">
        <div class="thumbnail">
          <%= link_to image_tag(item.photo.url), item %>
          <div class="caption">
            <h4><%= item.name %></h4>
            <p>
                ¥<%= item.price %>
            </p>
            <p><%= "卖家： #{item.user.name}" %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% if user_signed_in? %>
  <%= link_to '添加新物品', new_item_path, class: "btn btn-link" %>
<% end %>
